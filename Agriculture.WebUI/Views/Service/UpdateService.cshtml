@model Agriculture.Entities.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Güncelleme Formu</h4>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="ServiceId"/>
                <div class="form-group">
                    <label for="serviceTitle"><strong>Başlık</strong></label>
                    <br />
                    <input type="text" class="form-control" asp-for="Title" placeholder="Başlık Giriniz">
                </div>
                <div class="form-group">
                    <label for="serviceDescription"><strong>Açıklamalar</strong></label>
                    <br />
                    <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label for="serviceImageUrl"><strong>Görsel</strong></label>
                    <br />
                    <input type="file" asp-for="ImageUrl" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Görsel Ekle">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-outline-primary" type="button">Resim Ekle</button>
                        </span>
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-success mb-2">Güncelle</button>
                <a href="/Service/Index/" class="btn btn-outline-danger mb-2">Listeye Dön</a>
            </form>
        </div>
    </div>
</div>


