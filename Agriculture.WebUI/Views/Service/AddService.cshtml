@model Agriculture.WebUI.Models.ServiceAddViewModel
@{
    ViewData["Title"] = "Yeni Hizmet Formu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmet Oluşturma Formu</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="serviceTitle">Başlık</label>
                        <br />
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık Giriniz">
                    </div>
                    <div class="form-group">
                        <label for="serviceDescription">Açıklamalar</label>
                        <br />
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="serviceImageUrl">Görsel</label>
                        <br />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <input type="file" asp-for="ImageUrl" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Görsel Ekle">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-outline-primary" type="button">Resim Ekle</button>
                            </span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-outline-success mb-2">Kaydet</button>
                    <a href="/Service/Index/" class="btn btn-outline-danger mb-2">Listeye Dön</a>
                </form>
            </div>
        </div>
    </div>



