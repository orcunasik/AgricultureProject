@using Agriculture.Entities.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Hizmetlerimiz";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <span><a href="/Service/AddService" class="btn btn-outline-primary">Yeni Hizmet Ekle</a></span>
    <br />
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmetler</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklamalar</th>
                                <th>GörselUrl</th>
                                <th colspan="2">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ServiceId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.ImageUrl</td>
                                    <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-info">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>