@using Agriculture.Entities.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Yöneticiler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<span><a href="/Admin/AddAdmin/" class="btn btn-outline-primary">Yeni Yönetici Oluştur</a></span>
<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yönetici Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı Adı</th>
                            <th colspan="2">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (var adminItem in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@adminItem.UserName</td>
                                    <td><a href="/Admin/DeleteAdmin/@adminItem.AdminId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/UpdateAdmin/@adminItem.AdminId" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

