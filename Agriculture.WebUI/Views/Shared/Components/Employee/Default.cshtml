@using Agriculture.Entities.Concrete
@model List<Employee>
<div class="team" id="team">
    <div class="container">
        <h3 class="tittle">Ekibimiz</h3>
        <p class="heading-btm-w3ls">Sizler İçin 7/24 Destek Veren Harika Ekibimizle Tanışın</p>
        <div class="wthree_team_grids">
            @foreach (var item in Model)
            {
                <div class="col-md-3 wthree_team_grid">
                    <div class="hovereffect">
                        <img src="@item.ImageUrl" alt="Profile Foto" class="img-responsive" />
                        <div class="overlay">
                            
                            <div class="rotate">
                                <p class="group1">
                                    <a href="@item.TwitterUrl">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                    <a href="@item.FacebookUrl">
                                        <i class="fa fa-facebook"></i>
                                    </a>
                                </p>
                                <hr>
                                <hr>
                                <p class="group2">
                                    <a href="@item.InstagramUrl">
                                        <i class="fa fa-instagram"></i>
                                    </a>
                                    <a href="@item.LinkedinUrl">
                                        <i class="fa fa-linkedin"></i>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <h4>@item.FirstName @item.LastName</h4>
                    <p>@item.Job</p>
                </div>
            }
            <div class="clearfix"> </div>
        </div>
    </div>
</div>