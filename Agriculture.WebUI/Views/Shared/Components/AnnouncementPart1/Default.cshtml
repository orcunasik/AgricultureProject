@model Agriculture.Entities.Concrete.Announcement
<div class="blog" id="blog">
    <div class="container">
        <h3 class="tittle">Son Gelişmeler</h3>
        <p class="heading-btm-w3ls">In Harvest 2022 Yaz Tarım Fuarı Başladı</p>
        <div class="blog-grid-w3-agileits">
            <div class=" col-md-7 blog-img1-agileits-w3layouts">
                <a href="#" data-toggle="modal" data-target="#myModal2"></a>
            </div>
            <div class=" col-md-5 blog-info-w3layouts">
                <h6> <a href="#" data-toggle="modal" data-target="#myModal2">@Model.Title</a></h6>
                <div class="inner-info">
                    <a href="#" class="blog-text-w3ls bar">Üst Menü</a><span>@Model.Date.ToShortDateString()</span>
                    <p class="para-w3-agileits">@Model.Description</p>
                </div>
                <a href="#" class="blog-more-agile" data-toggle="modal" data-target="#myModal2">Devamı..</a>
            </div>
            <div class="clearfix"></div>
        </div>
        @await Component.InvokeAsync("AnnouncementPart2")
        @await Component.InvokeAsync("AnnouncementPart3")
    </div>
</div>
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>In Harvest</h4>
                <img src="@Model.ImageUrl" alt="Görsel 1" class="img-responsive">
                <h5>@Model.Title</h5>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("AnnouncementModal2")
@await Component.InvokeAsync("AnnouncementModal3")